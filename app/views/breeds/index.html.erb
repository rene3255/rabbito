
<h1>Breeds</h1>

<div id="breeds">
  <table class="table table-striped table-hover">
    <thead class="thead-dark">
      <tr> 
        <th># Id</th>
        <th>Description</th>
       </tr>
     </thead>   
     <tbody>
        <% @breeds.each do |breed| %> 
          <tr>
            <td><%= breed.id %></td>
            <td><%= breed.description %></td>
            <td><%= link_to 'Show', breed %></td>
            <td><%= link_to 'Edit', edit_breed_path(breed) %></td>
            <td><%= link_to 'Destroy', breed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>  
         <% end %>
      </tbody>
  </table>  
</div>

<%= link_to "Add new breed", new_breed_path %>
