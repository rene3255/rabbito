<%= form_with(model: supply) do |form| %>
  <% if supply.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(supply.errors.count, "error") %> prohibited this supply from being saved:</h2>

      <ul>
        <% supply.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :acquisition_date, style: "display: block" %>
    <%= form.date_field :acquisition_date, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :folio, style: "display: block" %>
    <%= form.text_field :folio, class:"form-control", placeholder: "Ticket nunber or invoice" %>
  </div>
  <div>
    <%= form.label :quantity, style: "display: block" %>
    <%= form.number_field :quantity, class:"form-control", placeholder: "number of pieces, kilograms o liters" %>
  </div>

  <div class="field form-group">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :cost, style: "display: block" %>
    <%= form.text_field :cost, class:"form-control" %>
  </div>
  <br/>
  <div class="btn btn-secundary">
    <%= form.submit %>
  </div>
  
<% end %>
